@page "/"
@using MudBlazor
<PageTitle>Home</PageTitle>

<MudGrid>
    <MudItem xs="12" Class="d-flex justify-center align-center">
        <MudImage Src="kinesiskBild.jpg" Width="400" Height="200" Elevation="25" Class="rounded-lg ma-6" />
    </MudItem>
</MudGrid>

<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-10 px-6 mb-4 beige-paper">
            <MudText Typo="Typo.h1" Align="Align.Center">
                Välkommen till EasyLearn!
            </MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="6">
        <MudPaper Class="pa-6 beige-paper">
            <MudText Typo="Typo.h6">
                Här kan du träna på Kinesiska tecken på ett enkelt och roligt sätt.
                Börja träna genom att välja flashcard i vänstra menyn.
            </MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="6">
        <MudPaper Class="pa-6 beige-paper">
            <MudText Typo="Typo.h6">
                Denna utbildningen kan också göras från Spanska till Kinesiska
                och från Kinesiska till Kinesiska för att få det extra utmanande.
            </MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<style>

    .beige-paper {
        background-color: #fffdf8 !important;
    }
</style>
