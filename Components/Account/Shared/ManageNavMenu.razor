@using EasyLearn.Data
@using EasyLearn.Data.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

<MudNavMenu Class="nav flex-column">

    <MudNavLink Href="Account/Manage" Icon="@Icons.Material.Filled.AccountBox" Match="NavLinkMatch.All">Profil</MudNavLink>


    <MudNavLink Href="Account/Manage/Email" Icon="@Icons.Material.Filled.Email">E-post</MudNavLink>


    <MudNavLink Href="Account/Manage/ChangePassword" Icon="@Icons.Material.Filled.LockOpen">Lösenord</MudNavLink>
    
    @if (hasExternalLogins)
    {

        <MudNavLink Href="Account/Manage/ExternalLogins" Icon="@Icons.Material.Filled.VpnKey">External logins</MudNavLink>
       
    }

    <MudNavLink Href="Account/Manage/TwoFactorAuthentication" Icon="@Icons.Material.Filled.Security">Tvåfakorisering</MudNavLink>


    <MudNavLink Href="Account/Manage/PersonalData" Icon="@Icons.Material.Filled.Delete">Radera konto</MudNavLink>
   
</MudNavMenu>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
